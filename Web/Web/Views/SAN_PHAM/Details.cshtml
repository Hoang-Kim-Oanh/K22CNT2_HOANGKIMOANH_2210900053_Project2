@model Web.Models.SAN_PHAM

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary">Chi tiết sản phẩm</h2>

    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Thông tin sản phẩm</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.TenSP)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TenSP)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Gia)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Gia)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.TrangThai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TrangThai)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.SoLuong)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SoLuong)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.img)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.img)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaSP }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
