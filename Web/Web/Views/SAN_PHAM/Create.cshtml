@model Web.Models.SAN_PHAM

@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary">Thêm sản phẩm mới</h2>

    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Thông tin sản phẩm</h4>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row mt-3">
                    @Html.LabelFor(model => model.TenSP, "Tên sản phẩm", htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mt-3">
                    @Html.LabelFor(model => model.Gia, "Giá", htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mt-3">
                    @Html.LabelFor(model => model.TrangThai, "Trạng thái", htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                    <div class="col-md-9">
                        <div class="form-check">
                            @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    @Html.LabelFor(model => model.SoLuong, "Số lượng", htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mt-3">
                    @Html.LabelFor(model => model.img, "Hình ảnh", htmlAttributes: new { @class = "col-md-3 col-form-label font-weight-bold" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.img, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mt-4">
                    <div class="col-md-9 offset-md-3">
                        <input type="submit" value="Thêm mới" class="btn btn-primary" />
                        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary ms-2" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
