@model Web.Models.KHACH_HANG

@{
    ViewBag.Title = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary">Chi tiết khách hàng</h2>

    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Thông tin khách hàng</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Ho_ten)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Ho_ten)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Tai_khoan)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Tai_khoan)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Mat_khau)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Mat_khau)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Dia_chi)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Dia_chi)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Dien_thoai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Dien_thoai)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Ngay_sinh)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Ngay_sinh)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Ngay_cap_nhat)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Ngay_cap_nhat)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Gioi_tinh)
                </dt>
                <dd class="col-sm-9">
                    @{
                        var gioiTinh = Model.Gioi_tinh == 1 ? "Nam" : "Nữ";
                    }
                    @gioiTinh
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Tich_diem)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Tich_diem)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Trang_thai)
                </dt>
                <dd class="col-sm-9">
                    @{
                        var trangThai = Model.Trang_thai == 1 ? "Hoạt động" : "Ngừng";
                    }
                    @trangThai
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaKH }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
