@model Web.Models.KHACH_HANG

@{
    ViewBag.Title = "Tạo khách hàng mới";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container mt-5">
    <h2>Tạo khách hàng mới</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>KHACH_HANG</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("Ho_ten", "Họ và tên", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Ho_ten", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("Ho_ten", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tai_khoan", "Tài khoản", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Tai_khoan", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("Tai_khoan", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Mat_khau", "Mật khẩu", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Mat_khau", new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessage("Mat_khau", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Dia_chi", "Địa chỉ", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Dia_chi", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("Dia_chi", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Dien_thoai", "Điện thoại", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Dien_thoai", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("Dien_thoai", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Email", "Email", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Ngay_sinh", "Ngày sinh", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Ngay_sinh", new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessage("Ngay_sinh", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Ngay_cap_nhat", "Ngày cập nhật", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Ngay_cap_nhat", new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessage("Ngay_cap_nhat", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Gioi_tinh", "Giới tính", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Gioi_tinh", new SelectList(new[]
                    {
                        new { Value = "1", Text = "Nam" },
                        new { Value = "0", Text = "Nữ" }
                    }, "Value", "Text"), "Chọn giới tính", new { @class = "form-control" })
                    @Html.ValidationMessage("Gioi_tinh", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tich_diem", "Tích điểm", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Tich_diem", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("Tich_diem", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Trang_thai", "Trạng thái", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Trang_thai", new SelectList(new[]
                    {
                        new { Value = "1", Text = "Hoạt động" },
                        new { Value = "0", Text = "Ngừng" }
                    }, "Value", "Text"), "Chọn trạng thái", new { @class = "form-control" })
                    @Html.ValidationMessage("Trang_thai", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
