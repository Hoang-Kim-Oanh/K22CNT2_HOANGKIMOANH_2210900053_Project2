@model IEnumerable<Web.Models.DON_HANG>

@{
    ViewBag.Title = "Danh sách Đơn hàng";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2>Danh sách Đơn hàng</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-success mb-3" })
</p>
<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ngaylap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tongtien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KHACH_HANG.Ho_ten)
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngaylap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tongtien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KHACH_HANG.Ho_ten)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaDH }, new { @class = "btn btn-primary btn-sm me-1" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDH }, new { @class = "btn btn-info btn-sm me-1" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaDH }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
