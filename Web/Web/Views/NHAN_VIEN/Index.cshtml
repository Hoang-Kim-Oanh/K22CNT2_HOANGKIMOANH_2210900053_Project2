@model IEnumerable<Web.Models.NHAN_VIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2>Danh sách nhân viên</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ho_ten)</th>
            <th>@Html.DisplayNameFor(model => model.Chuc_vu)</th>
            <th>@Html.DisplayNameFor(model => model.Luong)</th>
            <th>@Html.DisplayNameFor(model => model.Ngay_vao_lam)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Ho_ten)</td>
                <td>@Html.DisplayFor(modelItem => item.Chuc_vu)</td>
                <td>@Html.DisplayFor(modelItem => item.Luong)</td>
                <td>@Html.DisplayFor(modelItem => item.Ngay_vao_lam)</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }, new { @class = "btn btn-primary btn-sm me-1" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNV }, new { @class = "btn btn-info btn-sm me-1" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
